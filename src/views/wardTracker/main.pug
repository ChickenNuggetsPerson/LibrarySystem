extends trackerLayout.pug

block content
    
    div(style="padding-top:7vh; height: 70vh;" id="mainContent")
        div(class="progressImgContainer")

            div(class="darkGlow" onClick="displayHugh()")
                Img(src="/static/wardTracker/BW_temple.png" id="backgroundIMG")
            
            div(class="glow" onClick="displayHugh()")
                Img(src="/static/wardTracker/temple.png" class="reveal-Image" id="progressImg")

        div(class="text-center")
            div(class="flex hstack"  style="margin: auto;")
                div(class="spacer")
                
                div(id="dataCounter")

                div(class="spacer")

            div(class="flex hstack"  style="margin: auto;" onClick="showCounterForm()")
                div(class="spacer")
                div(id="countDownTimer")
                div(class="spacer")


    div(id="chatContainer")

    button(type="button" class="btn btn-primary" onclick="displaySubmitForm()" style="position:absolute; left: 3px; bottom: 3px;") Create Entry   
    button(type="button" class="btn btn-success" onclick="changePage('list')"    style="position:absolute; right: 3px; bottom: 3px;") All Entries  
    
    button(type="button" class="btn btn-danger admin" onclick="changePage('/admin/view')" style="position:absolute; right: 3px; bottom: 50px;") Admin Page

    script(src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.3/dist/confetti.browser.min.js")

    script.
        var isAdmin = !{isAdmin};
        var versionNum = !{versionNum}
    script(src="/static/wardTracker/chat.js")
    script(src="/static/wardTracker/counter.js")
    script(src="/static/wardTracker/main.js")